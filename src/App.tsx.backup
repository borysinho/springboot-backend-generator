import React, { useState } from "react";
import { GraphProvider, Paper, createElements, createLinks, useGraph } from "@joint/react";
import "./App.css";

// Importar tipos
import type { CustomElement, UMLRelationship } from "./types";

// Importar constantes
import { classTemplates } from "./constants/templates";

// Importar utilidades
import { convertRelationshipToLink } from "./utils/relationshipUtils";

// Importar componentes
import { Toolbar } from "./components/Toolbar";
import { PropertiesPanel } from "./components/PropertiesPanel";
import Header from "./components/Header";

// Componente del diagrama que maneja la lógica de JointJS
function UMLDiagram({
  elements,
  relationships,
  selectedElement,
  onSelectElement,
  onUpdateElementPosition,
  onSelectRelationship
}: {
  elements: CustomElement[];
  relationships: UMLRelationship[];
  selectedElement: CustomElement | UMLRelationship | null;
  onSelectElement: (element: CustomElement) => void;
  onUpdateElementPosition: (elementId: string, x: number, y: number) => void;
  onSelectRelationship: (relationship: UMLRelationship) => void;
}) {
  const graph = useGraph();

  // Convertir elementos personalizados a elementos JointJS estándar
  const jointElements = elements.map((element: CustomElement) => {
    // Determinar el tipo de elemento JointJS basado en el tipo UML
    let jointType = 'standard.Rectangle';
    let attrs: any = {
      body: {
        fill: '#ffffff',
        stroke: '#333',
        strokeWidth: 2,
      },
      label: {
        text: element.className || 'Elemento',
        fill: '#333',
        fontSize: 12,
        fontWeight: 'bold',
      },
    };

    // Personalizar según el tipo de elemento UML
    switch (element.elementType) {
      case 'interface':
        attrs.body.fill = '#e3f2fd';
        attrs.body.stroke = '#2196f3';
        attrs.label.fill = '#0d47a1';
        break;
      case 'enumeration':
        attrs.body.fill = '#efebe9';
        attrs.body.stroke = '#795548';
        attrs.label.fill = '#3e2723';
        break;
      case 'package':
        attrs.body.fill = '#e8eaf6';
        attrs.body.stroke = '#3f51b5';
        attrs.label.fill = '#1a237e';
        break;
      case 'note':
        attrs.body.fill = '#fffde7';
        attrs.body.stroke = '#ffc107';
        attrs.label.fill = '#f57f17';
        attrs.label.fontFamily = 'Arial, sans-serif';
        break;
      default: // class
        attrs.body.fill = '#f5f5f5';
        attrs.body.stroke = '#666';
        attrs.label.fill = '#333';
    }

    return {
      id: element.id,
      type: jointType,
      position: { x: element.x, y: element.y },
      size: { width: element.width, height: element.height },
      attrs,
    };
  });

  // Convertir relaciones a links JointJS
  const jointLinks = relationships.map((relationship: UMLRelationship) =>
    convertRelationshipToLink(relationship)
  );

  // Manejar eventos de elementos
  const handleElementPointerClick = (element: any) => {
    const customElement = elements.find(el => el.id === element.id);
    if (customElement) {
      onSelectElement(customElement);
    }
  };

  // Manejar movimiento de elementos
  React.useEffect(() => {
    if (!graph) return;

    const handleElementMove = (element: any) => {
      const position = element.position();
      onUpdateElementPosition(element.id, position.x, position.y);
    };

    graph.on('element:pointerclick', handleElementPointerClick);
    graph.on('change:position', handleElementMove);

    return () => {
      graph.off('element:pointerclick', handleElementPointerClick);
      graph.off('change:position', handleElementMove);
    };
  }, [graph, elements, onSelectElement, onUpdateElementPosition]);

  return (
    <Paper
      width="100%"
      height="100%"
      gridSize={10}
      drawGrid={{
        name: 'mesh',
        args: { color: '#ddd', thickness: 1 },
      }}
      style={{
        border: '1px solid #ccc',
        borderRadius: '4px',
      }}
    />
  );
}

// Componente principal del diagrama UML
function App() {
  const [dynamicElements, setDynamicElements] = useState<CustomElement[]>([]);
  const [relationships, setRelationships] = useState<UMLRelationship[]>([]);
  const [selectedElement, setSelectedElement] = useState<CustomElement | UMLRelationship | null>(null);

  // Función para agregar elementos
  const handleAddElement = (
    template: keyof typeof classTemplates,
    x?: number,
    y?: number
  ) => {
    const templateData = classTemplates[template];
    const newElement: CustomElement = {
      id: `element_${Date.now()}`,
      className: templateData.className,
      attributes: templateData.attributes,
      methods: templateData.methods,
      elementType: templateData.elementType,
      x: x || 100,
      y: y || 100,
      width: templateData.width,
      height: templateData.height,
    };

    setDynamicElements(prev => [...prev, newElement]);
  };

  // Función para actualizar posición de elementos
  const handleUpdateElementPosition = (elementId: string, x: number, y: number) => {
    setDynamicElements(prev =>
      prev.map(el =>
        el.id === elementId ? { ...el, x, y } : el
      )
    );
  };

  // Función para seleccionar elementos
  const handleSelectElement = (element: CustomElement) => {
    setSelectedElement(element);
  };

  // Función para seleccionar relaciones
  const handleSelectRelationship = (relationship: UMLRelationship) => {
    setSelectedElement(relationship);
  };

  return (
    <div className="app">
      <Header />
      <div className="app-content">
        <Toolbar onAddElement={handleAddElement} />
        <div className="diagram-container">
          <GraphProvider
            initialElements={createElements([])}
            initialLinks={createLinks([])}
          >
            <UMLDiagram
              elements={dynamicElements}
              relationships={relationships}
              selectedElement={selectedElement}
              onSelectElement={handleSelectElement}
              onUpdateElementPosition={handleUpdateElementPosition}
              onSelectRelationship={handleSelectRelationship}
            />
          </GraphProvider>
        </div>
        <PropertiesPanel
          selectedElement={selectedElement}
          onUpdateElement={(updatedElement) => {
            setDynamicElements(prev =>
              prev.map(el =>
                el.id === updatedElement.id ? updatedElement : el
              )
            );
          }}
        />
      </div>
    </div>
  );
}

export default App;

