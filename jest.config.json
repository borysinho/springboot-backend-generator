{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "testMatch": ["**/tests/**/*.test.ts"],
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": "tsconfig.test.json"
      }
    ]
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "collectCoverageFrom": ["server/**/*.ts", "!server/index.ts"]
}
